<Window x:Class="DynamicFormWPF.DatabaseSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn CSDL" Height="300" Width="343" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <ListView Height="261" HorizontalAlignment="Left" Name="_listViewDBNames" VerticalAlignment="Top" Width="198" SelectionChanged="_listViewDBNames_SelectionChanged" />
        <Button Height="33" HorizontalAlignment="Left" Margin="225,63,0,0" Name="_btnSelect" VerticalAlignment="Top" Width="75" Click="_btnSelect_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/Save.png" />
                <Label Content="Chọn" />
            </StackPanel>
        </Button>
        <Button Height="33" HorizontalAlignment="Left" Margin="225,176,0,0" Name="_btnDelete" VerticalAlignment="Top" Width="75" Click="_btnDelete_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/Remove.png" />
                <Label Content="Xóa" />
            </StackPanel>
        </Button>
    </Grid>
</Window>